{
	"name": "conpassione/kuhteammanagement",
	"type": "typo3-cms-extension",
	"description": "TYPO3 Extension kuhteammanagement von conPassione gmbh",
	"keywords": [
		"TYPO3",
		"TYPO3 Extension",
		"typo3-cms-extension",
		"kuhteammanagement"
	],
	"homepage": "https://www.conpassione.ch/",
	"authors": [
		{
			"name": "Renzo Bauen, conPassione gmbh",
			"email": "info@conpassione.ch"
		}
	],
	"license": "GPL-2.0-or-later",
	"minimum-stability": "dev",
	"prefer-stable" : true,
	"require": {
		"conpassione/kuhdist": "*",
		"typo3/cms-core": "^13.4"
	},
	"require-dev": {
		"typo3/testing-framework": "*"
	},
	"autoload": {
		"psr-4": {
			"Conpassione\\kuhteammanagement\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Conpassione\\kuhteammanagement\\Tests\\": "Tests"
		}
	},
	"config": {
		"vendor-dir": ".build/vendor",
		"bin-dir": ".build/bin",
		"sort-packages": true,
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true,
			"helhum/dotenv-connector": true
		}
	},
	"repositories": [
		{
			"type": "path",
			"url": "packages/*",
			"options": {
				"symlink": true
			}
		}
	],
	"scripts": {
		"post-autoload-dump": [
			"TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironement::prepare"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-main": "1.0.x-dev"
		},
		"typo3/cms": {
			"extension-key": "kuhteammanagement",
			"web-dir": ".build/public"
		},
		"helhum/dotenv-connector": {
			"env-file": ".env",
			"adapter": "Helhum\\DotEnvConnector\\Adapter\\SymfonyDotEnv"
		}
	}
}
